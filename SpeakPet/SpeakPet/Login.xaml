<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpeakPet.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Speak Pet" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Login:" FontSize="Title" Padding="30,10,30,10"/>
        <Entry Placeholder="" x:Name="login"/>
        <Label Text="Senha:" FontSize="Title" Padding="30,10,30,10"/>
        <Entry Placeholder="" IsPassword="True" x:Name="password"/>
        <Button Text="Login" Clicked="Login_Clicked"></Button>
        <Button Text="Register" Clicked="Register_Clicked"></Button>
    </StackLayout>

</ContentPage>
