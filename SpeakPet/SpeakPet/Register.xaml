<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpeakPet.Register">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Login:" FontSize="Title" Padding="30,10,30,10"/>
            <Entry Placeholder="" x:Name="login"/>
            <Label Text="Senha:" FontSize="Title" Padding="30,10,30,10"/>
            <Entry Placeholder="" IsPassword="True" x:Name="password"/>
            <Label Text="Confirmar senha:" FontSize="Title" Padding="30,10,30,10"/>
            <Entry Placeholder="" IsPassword="True" x:Name="passwordconfirm"/>
            <Button Text="Registrar-se" Clicked="Registrar_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
